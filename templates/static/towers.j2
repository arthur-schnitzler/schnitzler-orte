{% extends "templates/partials/base.j2" %}
{% block title %}Schnitzlers Aufenthalte auf der Welt{% endblock %}
{% block scriptHeader %}
<script src="https://unpkg.com/deck.gl@^8.8.0/dist.min.js"></script>
<script src="https://d3js.org/d3.v5.min.js"></script>

<script src="https://api.tiles.mapbox.com/mapbox-gl-js/v1.13.0/mapbox-gl.js"></script>

<style type="text/css">
    #viscontainer {
    font-family: Helvetica, Arial, sans-serif;
    width: 100vmax;
    height: 1000px;
    margin: 0;
  }

  #control-panel {
    position: absolute;
    top: 170px;
    left: 0;
    margin: 12px;
    padding: 20px;
    font-size: 12px;
    line-height: 1.5;
    z-index: 1;
    background: #fff;
    font-family: Helvetica, Arial, sans-serif;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.15);
  }

  label {
    display: inline-block;
    width: 140px;
  }
</style>
{% endblock scriptHeader %}


{% block content %}
<div class="card p-2">
    <div class="card-header">
        <h1>Schnitzlers Aufenthalte auf der Welt</h1>
        <div id="control-panel">
            <div>
              <label>Radius</label>
              <input id="radius" type="range" min="1000" max="20000" step="1000" value="1000"></input>
              <span id="radius-value"></span>
            </div>
            <div>
              <label>Coverage</label>
              <input id="coverage" type="range" min="0" max="1" step="0.1" value="1"></input>
              <span id="coverage-value"></span>
            </div>
            <div>
              <label>Upper Percentile</label>
              <input id="upperPercentile" type="range" min="90" max="100" step="1" value="100"></input>
              <span id="upperPercentile-value"></span>
            </div>
          </div>
    </div>
    <div class="card-body">
        <div id="viscontainer"></div>
  </div>
</div>
<script src="static/js/towers.js"></script>
{% endblock %}